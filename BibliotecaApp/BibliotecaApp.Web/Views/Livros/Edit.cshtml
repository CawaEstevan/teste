@model BibliotecaApp.Application.DTOs.LivroUpdateDto
@{
    ViewData["Title"] = "Editar Livro";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="mb-4">✏️ Editar Livro</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Autor" class="form-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ISBN" class="form-label"></label>
                <input asp-for="ISBN" class="form-control" maxlength="13" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AnoPublicacao" class="form-label"></label>
                <input asp-for="AnoPublicacao" class="form-control" type="number" min="1450" max="2100" />
                <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="Disponivel" class="form-check-input" type="checkbox" />
                <label asp-for="Disponivel" class="form-check-label"></label>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}