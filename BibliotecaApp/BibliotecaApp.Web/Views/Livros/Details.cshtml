@model BibliotecaApp.Application.DTOs.LivroDto
@{
    ViewData["Title"] = "Detalhes do Livro";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="mb-4">üìñ Detalhes do Livro</h2>

        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">T√≠tulo</dt>
                    <dd class="col-sm-9">@Model.Titulo</dd>

                    <dt class="col-sm-3">Autor</dt>
                    <dd class="col-sm-9">@Model.Autor</dd>

                    <dt class="col-sm-3">ISBN</dt>
                    <dd class="col-sm-9">@Model.ISBN</dd>

                    <dt class="col-sm-3">Ano de Publica√ß√£o</dt>
                    <dd class="col-sm-9">@Model.AnoPublicacao</dd>

