                        {
                            <span class="badge bg-success">Dispon√≠vel</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Indispon√≠vel</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Data de Cadastro</dt>
                    <dd class="col-sm-9">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
        </div>
    </div>
</div>