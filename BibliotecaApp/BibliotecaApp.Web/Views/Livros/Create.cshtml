@model BibliotecaApp.Application.DTOs.LivroCreateDto
@{
    ViewData["Title"] = "Novo Livro";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="mb-4">➕ Adicionar Novo Livro</h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" placeholder="Ex: Dom Casmurro" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Autor" class="form-label"></label>
                <input asp-for="Autor" class="form-control" placeholder="Ex: Machado de Assis" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ISBN" class="form-label"></label>
                <input asp-for="ISBN" class="form-control" placeholder="13 dígitos - Ex: 9788535911664" maxlength="13" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
                <small class="form-text text-muted">Digite apenas números (13 dígitos)</small>
            </div>

            <div class="mb-3">
                <label asp-for="AnoPublicacao" class="form-label"></label>
                <input asp-for="AnoPublicacao" class="form-control" type="number" min="1450" max="2100" />
                <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Cadastrar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}