<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Loja Camisas E-Sports</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <style>
        :root {
            --gaming-primary: #8b5cf6;
            --gaming-secondary: #3b82f6;
            --gaming-dark: #1e1b4b;
            --gaming-darker: #0f172a;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: linear-gradient(135deg, #1e1b4b 0%, #0f172a 100%);
            color: #e2e8f0;
        }

        .navbar-gaming {
            background: linear-gradient(90deg, var(--gaming-primary) 0%, var(--gaming-secondary) 100%);
            box-shadow: 0 4px 6px rgba(139, 92, 246, 0.3);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .nav-link {
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            transform: translateY(-2px);
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }

        main {
            flex: 1;
        }

        .card {
            background: rgba(30, 27, 75, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(139, 92, 246, 0.3);
            color: #e2e8f0;
        }

        .card-header {
            background: linear-gradient(90deg, var(--gaming-primary) 0%, var(--gaming-secondary) 100%);
            border-bottom: 1px solid rgba(139, 92, 246, 0.5);
        }

        .table {
            color: #e2e8f0;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(139, 92, 246, 0.1);
        }

        .btn-primary {
            background: linear-gradient(90deg, var(--gaming-primary) 0%, var(--gaming-secondary) 100%);
            border: none;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(139, 92, 246, 0.5);
        }

        .footer-gaming {
            background: linear-gradient(90deg, var(--gaming-dark) 0%, var(--gaming-darker) 100%);
            border-top: 2px solid var(--gaming-primary);
            margin-top: auto;
        }

        .form-control, .form-select {
            background-color: rgba(30, 27, 75, 0.5);
            border: 1px solid rgba(139, 92, 246, 0.3);
            color: #e2e8f0;
        }

        .form-control:focus, .form-select:focus {
            background-color: rgba(30, 27, 75, 0.7);
            border-color: var(--gaming-primary);
            color: #e2e8f0;
            box-shadow: 0 0 0 0.25rem rgba(139, 92, 246, 0.25);
        }

        .form-label {
            color: #e2e8f0;
            font-weight: 500;
        }

        .alert {
            border: 1px solid rgba(139, 92, 246, 0.3);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-gaming">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-controller"></i> Loja de Camisas E-Sports
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CamisasGames" asp-action="Index">
                                <i class="bi bi-shop"></i> Camisas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CamisasGames" asp-action="Create">
                                <i class="bi bi-plus-circle"></i> Adicionar Nova
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-4">
        @RenderBody()
    </main>

    <footer class="footer-gaming py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">
                        <i class="bi bi-controller"></i> 
                        &copy; 2025 - Loja de Camisas E-Sports
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-0">
                        <i class="bi bi-code-slash"></i> 
                        Desenvolvido com ASP.NET Core MVC
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>